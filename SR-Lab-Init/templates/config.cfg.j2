exit all
configure
#--------------------------------------------------
echo "System Configuration"
#--------------------------------------------------
    system
        name {{ routername }}
        time
            sntp
                shutdown
            exit
            zone UTC
        exit
        bluetooth
            module A
            exit
            power off
        exit
    exit
#--------------------------------------------------
echo "System Security Configuration"
#--------------------------------------------------
    system
        security
            per-peer-queuing
            dist-cpu-protection
                policy "_default-access-policy" create
                exit
                policy "_default-network-policy" create
                exit
            exit
        exit
    exit
#--------------------------------------------------
echo "Log Configuration"
#--------------------------------------------------
    log
    exit
#--------------------------------------------------
echo "vsd Configuration"
#--------------------------------------------------
    system
        vsd
            system-id "test"
        exit
    exit
#--------------------------------------------------
echo "Card Configuration"
#--------------------------------------------------
    card 1
        card-type iom-1
        mda 1
            mda-type me12-100gb-qsfp28
            no shutdown
        exit
        mda 2
            mda-type me12-100gb-qsfp28
            no shutdown
        exit
        no shutdown
    exit
#--------------------------------------------------
echo "Connector Configuration"
#--------------------------------------------------
    port 1/1/c1
        connector
            breakout c4-10g
        exit
        no shutdown
    exit
    port 1/1/c2
        connector
            breakout c4-10g
        exit
        no shutdown
    exit
    port 1/1/c3
        connector
            breakout c4-10g
        exit
        no shutdown
    exit
    port 1/1/c4
        connector
            breakout c4-10g
        exit
        no shutdown
    exit
    port 1/1/c5
        connector
            breakout c4-10g
        exit
        no shutdown
    exit
#--------------------------------------------------
echo "Port Configuration"
#--------------------------------------------------
    port 1/1/c1/1
        ethernet
        exit
        no shutdown
    exit
    port 1/1/c2/1
        ethernet
        exit
        no shutdown
    exit
    port 1/1/c3/1
        ethernet
        exit
        no shutdown
    exit
    port 1/1/c4/1
        ethernet
        exit
        no shutdown
    exit
    port 1/1/c5/1
        ethernet
        exit
        no shutdown
    exit
#--------------------------------------------------
echo "System Sync-If-Timing Configuration"
#--------------------------------------------------
    system
        sync-if-timing
            begin
            commit
        exit
    exit
#--------------------------------------------------
echo "Management Router Configuration"
#--------------------------------------------------
    router management
    exit

#--------------------------------------------------
echo "Router (Network Side) Configuration"
#--------------------------------------------------
    router Base
{% for int_name in phy_interfaces %}
        interface "{{ int_name.int_name }}"
            address {{ int_name.ip_addr }}
            port {{ int_name.port }}
            no shutdown
        exit
{% endfor %}

{% for loop_name in loopbacks %}
        interface "{{ loop_name.loop_name }}"
            address {{ loop_name.ip_addr }}
            loopback
            no shutdown
        exit
{% endfor %}
        interface "system"
            no shutdown
        exit
    exit
#--------------------------------------------------
echo "Service Configuration"
#--------------------------------------------------
    service
        customer 1 name "1" create
            description "Default customer"
        exit
    exit
#--------------------------------------------------
echo "Router (Service Side) Configuration"
#--------------------------------------------------
    router Base
    exit